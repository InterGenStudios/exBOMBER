if [ "$(id -u)" != "0" ]; then

    echo -e "\n\n    ${RED}${BLINK}--------${NOCOLOR}"
    echo -e "    ${RED}${BLINK}WARNING!${NOCOLOR}"
    echo -e "    ${RED}${BLINK}--------${NOCOLOR}\n\n"
    echo -e "    ${WHITE}ex${CYAN}BOMBER ${WHITE}must be run as ${RED}${UNDERLINE_TEXT}root${NOCOLOR}\n\n"
    echo -e "    (Exiting now...)\n\n"
    exit 1

fi

